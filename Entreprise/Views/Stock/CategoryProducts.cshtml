@{
    ViewData["Title"] = "Products";
}
@model List<Product>

<section class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2 style="font-size: xx-large;color:black">Category: @Model.First().Category.Name</h2>

            @if (ViewData["role"].Equals("CEO"))
            {
                <a>
                    @Html.ActionLink("Add Product", "CreateProduct", "Stock",null,new {@class="btn btn-warning"})
                </a>
            }
        </div>

        <div class="row">

            @foreach (Product p in @Model)
            {

                <div class="col-lg-3 col-md-6 d-flex align-items-stretch">

                    <div class="product" data-aos="fade-up" data-aos-delay="50">
                        <div class="member-img">
                            <img src="~/img/portfolio/portfolio-@(p.Id).jpg" class="img-fluid" alt="">

                        </div>


                        <div class="product-info">
                            <a href="~/img/portfolio/portfolio-@(p.Id).jpg" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@p.Name"><i class="bx bx-plus"></i></a>
                            <a href="@Url.Action("Details", "Stock",new {id = @p.Id})">
                                <h4>@p.Name</h4>
                            </a>
                        </div>

                    </div>
                </div>
            }

        </div>


    </div>
</section>