@{
    ViewData["Title"] = "Products";
}
@model List<Product>
<section class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">

        <section id="portfolio" class="portfolio">
            <div class="container" data-aos="fade-up">
                <div class="section-title">

                    <div> <h2 style="font-size: xx-large;color:black">Stock</h2> </div>
                    <div>
                        @if (ViewData["role"].Equals("CEO"))
                        {
                            <div style="  float: right; ">
                                @Html.ActionLink("Add Product", "CreateProduct", "Stock",null ,new{@class="btn btn-warning" })
                            </div>
                        }
                    </div>
                </div>


            </div>

            <div class="row" data-aos="fade-up" data-aos-delay="100" style="padding-bottom: 20px">
                <div class="col-lg-12 d-flex justify-content-center">

                    <div class="row">

                        <div class="col-md-auto">@Html.ActionLink("All", "AllProduct", "Stock",new {id =1 })</div>
                        @foreach (Category v in ViewBag.Category)
                        {

                            <div class="col-md-auto">  
                           @if(v.Name!=ViewData["currentcategory"])
                           {
                             @Html.ActionLink(v.Name, "CategoryProducts", "Stock",new {id =v.Id})


                           }else{
@v.Name

}
                  </div>
                        }

                    </div>
                </div>
            </div>

            <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (Product p in @Model)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                        <div class="portfolio-wrap">
                            <a href="@Url.Action("Product", "Stock")">
                                <img src="~/img/products/@(p.Id).jpg" class="img-fluid" alt="">
                            </a>
                            <div class="portfolio-info">
                                <h4>@p.Name</h4>
                                <p>@p.Description</p>
                                <div class="portfolio-links">
                                    <a href="~/img/products/@(p.Id).jpg" data-gallery="portfolioGallery" class="portfolio-lightbox" title="App 1"><i class="bx bx-plus"></i></a>
                                    <a href="@Url.Action("Details", "Stock",new {id = @p.Id})" title="More Details"><i class="bx bx-link"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>

    </div>
</section>

    </div>
</section>

