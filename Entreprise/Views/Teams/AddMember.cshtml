 @{
    ViewData["Title"] = "Add member";

}
@model MyViewModel
<section class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up">


                <div class="col-lg-8 mt-5 mt-lg-0">


                    @using (Html.BeginForm("AddMember", "Teams", FormMethod.Post))
                    {
                        <div class="row">
                            <p> Firstname: </p>
                            <div class="form-group mt-3">
                            @Html.TextBoxFor( m =>  m.user.Firstname   ,new{  @class="form-control form-control-lg" , @required="true" }) 
                             </div>  <div class="form-group mt-3">
                                <p> Lastname: </p>
                                @Html.TextBoxFor( m => m.user.Lastname,new{  @class="form-control form-control-lg" , @required="true" })
                            </div>  <div class="form-group mt-3">
                                <p> Email: </p>
                                @Html.TextBoxFor( m => m.user.Email,new{@type="email", @class="form-control form-control-lg" , @required="true"   })
                            </div>
                            <div class="form-group mt-3">
                                <p> Password: </p>
                                @Html.PasswordFor( m => m.user.Password ,new{@type="password", @class="form-control form-control-lg"  , @required="true" })
                            </div>
                            <div class="form-group mt-3">
                                <p> Phone Number</p>
                                @Html.TextBoxFor( m => m.user.Phone_Number ,new{@type="number", @class="form-control form-control-lg" , @required="true"    })
                            </div>
                            <div class="form-group mt-3">
                                <p> Function: </p>
                                @Html.TextBoxFor( m => m.user.Function,new{  @class="form-control form-control-lg"  , @required="true" })
                            </div>
                            <div class="form-group mt-3">
                                <p> Role: </p>
                                @Html.DropDownList("user.ROLE", new List<SelectListItem>
                            {
                            new SelectListItem { Text = "CEO", Value = "CEO", Selected=true},
                            new SelectListItem { Text = "HOD", Value = "HOD"},
                            new SelectListItem { Text = "EMP", Value = "EMP"}
                            }, "Select ROLE",new { @class = "form-control" , @required="true"})
                            </div>
                            <div class="form-group mt-3">
                                <p> Department: </p>
                             @Html.DropDownList("did", new List<SelectListItem>
                            {
                            new SelectListItem { Text = "Human Resources", Value = "1", Selected=true},
                            new SelectListItem { Text = "Marketing", Value = "2"},
                            new SelectListItem { Text = "Operation", Value = "3"},
                            new SelectListItem { Text = "Product Management", Value = "4"},
                            new SelectListItem { Text = "Business Unit", Value = "5"}
                            }, "Select Department",new { @class = "form-control" , @required="true"})
                            </div>
                        </div>
                        <div class="text-center">
                            <p>&nbsp;</p>
                            <input class="btn btn-warning btn-lg btn-block" type="submit" value="ADD">
                        </div>
                    }
                </div>



            </div>
        </section><!-- End Contact Section -->
        <!-- End About Section -->

    </div>
</section>