@model Entreprise.Models.Product

@{

    ViewData["Title"] = "EditProduct";
}

<section class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">
        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up">


                <div class="col-lg-8 mt-5 mt-lg-0">


                    @using (Html.BeginForm("EditProduct", "Stock", FormMethod.Post))
                    {
                        <div class="row">
                            <p> Name: </p>
                            <div class="form-group mt-3">
                                @Html.TextBoxFor( m =>  m.Name   ,new{  @class="form-control form-control-lg" , @required="true" })
                            </div>  <div class="form-group mt-3">
                                <p> Description: </p>
                                @Html.TextBoxFor( m => m.Description,new{  @class="form-control form-control-lg" , @required="true" })
                            </div>  <div class="form-group mt-3">
                                <p> Reference: </p>
                                @Html.TextBoxFor( m => m.Reference,new{@class="form-control form-control-lg" , @required="true"   })
                            </div>
                            <div class="form-group mt-3">
                                <p> Bought_Price: </p>
                                @Html.TextBoxFor( m => m.Bought_Price ,new{@type="number", @class="form-control form-control-lg"  , @required="true" })
                            </div>
                            <div class="form-group mt-3">
                                <p> Sold_Price</p>
                                @Html.TextBoxFor( m => m.Sold_Price ,new{@type="number", @class="form-control form-control-lg" , @required="true"    })
                            </div>
                            <div class="form-group mt-3">
                                <p> Sold: </p>
                                @Html.TextBoxFor( m => m.Sold,new{ @type="number", @class="form-control form-control-lg"  , @required="true" })
                            </div>
                            <div class="form-group mt-3">
                                <p> Left: </p>
                                @Html.TextBoxFor( m => m.Left,new{@type="number",  @class="form-control form-control-lg"  , @required="true" })
                            </div> 
                        </div>
                        <div class="text-center">
                            <p>&nbsp;</p>
                            <input class="btn btn-warning btn-lg btn-block" type="submit" value="Save">
                        </div>
                    }
                </div>



            </div>
        </section><!-- End Contact Section -->
        <!-- End About Section -->

    </div>
</section>

