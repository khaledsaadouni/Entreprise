@{
    ViewData["Title"] = "Department";
    ViewData["Human resources"] = "group";
    ViewData["Marketing"] = "chart";
    ViewData["Operation"] = "spreadsheet";
    ViewData["Product Management"] = "package";
    ViewData["Business Unit"] = "stats";




} 
@model ICollection<Department>

<section class="d-flex align-items-center justify-content-center">
    <div class="container" data-aos="fade-up">

        <section id="team" class="team">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2 style="font-size: xx-large;color:black">Departments 
                    </h2>

                </div>
              
                <section class="features">
                    <div class="container" data-aos="fade-up">

                        <div>
                            <div class="col-lg-6" data-aos="fade-left" data-aos-delay="50">
                                <div class="icon-box mt-5 mt-lg-0" data-aos="zoom-in" data-aos-delay="70">
                                <i class='bx bx-male-female'></i>
                                <h4>@Html.ActionLink("All Team Members", "AllTeam", "Teams")</h4>
                                    <p>&nbsp;</p>
                                </div>
                                @foreach(Department d in @Model){
                            
                                    <div class="icon-box mt-5 mt-lg-0" data-aos="zoom-in" data-aos-delay="70">
                                        <i class="bx bx-@ViewData[(string?)d.Name]"></i>
                                        <h4>@Html.ActionLink(d.Name, "Team", "Teams",new {id =d.Name })</h4>
                                        <p>Head Of Department: @d.HOD.Firstname  @d.HOD.Lastname  </p>
                                    </div>
                               
                                } 
                            </div>
                        </div>

                    </div>
                </section> 
            </div>


        </section> 
       

    </div>
</section>